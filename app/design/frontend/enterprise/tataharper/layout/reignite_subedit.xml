<layout version="1.0">

	<reignite_subedit_index_index translate="label">
		<update handle="customer_account"/>
		<label>Change My Subscription Frequency</label>
		<reference name="root">
			<action method="setHeaderTitle" translate="title" module="reignite_subedit">
				<title>Change My Subscription Frequency</title>
			</action>
		</reference>
		<reference name="content">
			<block type="reignite_subedit/index" name="subedit.index" template="reignite/subedit/change.phtml" />
		</reference>
		<reference name="head">
            <action method="setTitle" translate="title" module="sarp">
                <title>Change My Subscription Frequency</title>
            </action>
        </reference>
	</reignite_subedit_index_index>

