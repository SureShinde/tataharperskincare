?>
<?php if ($_products = $this->getRecentlyViewedProducts()): ?>
<div class="block block-list block-viewed">
    <div class="block-title">
        <strong><span><?php echo $this->__('Recently Viewed Products') ?></span></strong>
    </div>
    <div class="block-content">
        <ol id="recently-viewed-items">
        <?php $count=0; ?>
        <?php foreach ($_products as $_item): ?>
            <?php if ($count<3): ?>
                <li class="item">
                    <div class="revi_left"><a href="<?php echo $this->getProductUrl($_item) ?>" class="product-image"><img src="<?php echo $this->helper('catalog/image')->init($_item, 'small_image')->resize(75, 75) ?>" width="75" height="75" alt="<?php echo $this->htmlEscape($_item->getName()) ?>" /></a>
                    </div>
                    <div class="product-details">
                        <p class="product-name">
                            <a href="<?php echo $this->getProductUrl($_item) ?>"><?php echo $this->htmlEscape($_item->getName()) ?></a>
                        </p>
                        <?php //echo $this->getPriceHtml($_item, true) ?>
                        <div class="price-box"><span class="regular-price">
                    <span class="price">
                        <?php echo '$' . number_format($_item->getMaxPrice(), 2); ?>
                    </span></span></div>
                        <?php if($_item->isSaleable()): ?>
                        <button type="button" title="<?php echo $this->__('Add to Cart') ?>" class="button btn-cart" onclick="setLocation('<?php echo $this->getAddToCartUrl($_item) ?>')"><span><span><?php echo $this->__('Add to Cart') ?></span></span></button>
                    </div>
                    <?php $count++ ?>
                    <?php endif; ?>
                </li>
            <?php endif; ?>
            <hr />
        <?php endforeach; ?>
        </ol>
        <script type="text/javascript">decorateList('recently-viewed-items');</script>
    </div>
</div>
<?php endif; ?>
