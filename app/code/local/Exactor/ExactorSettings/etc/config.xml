<config>
    <modules>
        <Exactor_ExactorSettings>
            <version>2012.09.25</version>
        </Exactor_ExactorSettings>
    </modules>

    <global>
        <helpers>
            <ExactorSettings>
                <class>Exactor_ExactorSettings_Helper</class>
            </ExactorSettings>
            <ExactorSettings_versionresolver>
                <class>Exactor_ExactorSettings_Helper_VersionResolver</class>
            </ExactorSettings_versionresolver>
        </helpers>

        <resources>
			<!-- Declaring module setup handler -->
			<!-- [start] -->
            <ExactorSettings_setup>
                <setup>
                    <module>Exactor_ExactorSettings</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </ExactorSettings_setup>
			<!-- [End] -->
        </resources>

        <blocks>
            <ExactorSettings>
                <class>Exactor_ExactorSettings_Block_Form</class>
            </ExactorSettings>
        </blocks>

    </global>

    <admin>
        <routers>
            <ExactorSettings>
                <use>admin</use>
                <args>
                    <module>Exactor_ExactorSettings</module>
                    <frontName>ExactorSettings</frontName>
                </args>
            </ExactorSettings>
        </routers>
    </admin>

    <adminhtml>
        <!--<translate>
            <modules>
                <Exactor_adminhtml>
                    <files>
                        <ExactorSettings>Exactor_Exactordetails.csv</ExactorSettings>
                    </files>
                </Exactor_adminhtml>
            </modules>
        </translate>-->

        <menu>
            <system>
                <children>
                    <ExactorSettings_adminform translate="title" module="ExactorSettings">
                        <title>Exactor Account</title>
                        <action>ExactorSettings/adminhtml_Form</action>
                    </ExactorSettings_adminform>
                </children>
            </system>
        </menu>

        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <exactordetails_adminform>
                                    <title>Exactor Account</title>
                                </exactordetails_adminform>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>

        <layout>
            <updates>
                <ExactorSettings>
                    <file>exactorsettings.xml</file>
                </ExactorSettings>
            </updates>
        </layout>
    </adminhtml>


    <frontend>
        <layout>
            <updates>
                <ExactorSettings>
                    <file>exactoronestepcheckout.xml</file>
                </ExactorSettings>
            </updates>
        </layout>
    </frontend>

</config>